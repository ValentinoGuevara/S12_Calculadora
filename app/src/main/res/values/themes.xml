<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/operator_button_color</item>
        <item name="colorPrimaryVariant">@color/operator_button_pressed</item>
        <item name="colorOnPrimary">@color/operator_text_color</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/function_button_color</item>
        <item name="colorSecondaryVariant">@color/function_button_pressed</item>
        <item name="colorOnSecondary">@color/function_text_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Optional: Theme for landscape orientation -->
    <style name="Theme.Calculator.Landscape" parent="Theme.Calculator">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>